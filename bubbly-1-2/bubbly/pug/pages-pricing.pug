extends _pug-includes/layout

block vars 
    - var pages = true;
    - var current = 'pages-pricing.html';  
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Pricing tables'})   

block content
        +breadcrumbs(breadcrumbs)
        +pageHeader('Pricing tables')
        
        section
            .row.mb-5
                - var pricing = ['Single User', '5GB Storage', 'Unlimited Public Projects', 'Community Access', 'Unlimited Private Projects', 'Dedicated Phone Support', 'Monthly Status Reports']
                .col-lg-4
                    +pricingCard('Free', 0, pricing, 2)

                .col-lg-4
                    +pricingCard('Plus', 9, pricing, 4, true)
                    
                .col-lg-4
                    +pricingCard('Pro', 30, pricing, 6)    

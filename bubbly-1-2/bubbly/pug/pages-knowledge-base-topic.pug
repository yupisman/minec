extends _pug-includes/layout

block vars 
    - var pages = true;
    - var current = 'pages-knowledge-base-topic.html';  
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Knowledge Base', link: 'pages-knowledge-base.html'})   
    - breadcrumbs.push({name: 'Knowledge Base Topic'})   

block content

    
        +breadcrumbs(breadcrumbs)
        +pageHeader('Knowledge Base Topic')
        
        .row.mb-3 
            .col-lg-9.col-xl-8
                .card.mb-5
                    .card-body.p-5
                        .text-content
                            p
                                strong Pellentesque habitant morbi tristique
                                |  senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae, ultricies eget, tempor sit amet, ante. Donec eu libero sit amet quam egestas semper. 
                                em Aenean ultricies mi vitae est.
                                |  Mauris placerat eleifend leo. Quisque sit amet est et sapien ullamcorper pharetra. Vestibulum erat wisi, condimentum sed, 
                                code commodo vitae
                                | , ornare sit amet, wisi. Aenean fermentum, elit eget tincidunt condimentum, eros ipsum rutrum orci, sagittis tempus lacus enim ac dui. 
                                a(href='#') Donec non enim
                                |  in turpis pulvinar facilisis. Ut felis.

                            p #{dummyText[0]}
                            
                            h2 Header Level 2
                            ol
                                li Lorem ipsum dolor sit amet, consectetuer adipiscing elit.
                                li Aliquam tincidunt mauris eu risus.

                            pre.mb-5
                                code.language-js.
                                    // Create an example category map
                                    createListingsMap({
                                        mapId: 'categoryMap',
                                        markerPath: 'img/marker.svg',
                                        markerPathHighlight: 'img/marker-hover.svg',
                                        jsonFile: 'js/restaurants-geojson.json',
                                        imgBasePath: 'img/photo/'
                                    });

                            blockquote.blockquote.blockquote-primary.bg-gray-100.p-5 #{dummyText[1]}
                            h3 Header Level 3
                            p #{dummyText[2]}
                            p #{dummyText[3]}
                            p.card-text #{dummyText[4]} #{dummyText[5]}


                    .card-footer.text-center.py-5
                            h6 Was this article helpful?

                            button.btn.btn-success.text-white
                                i.fa.fa-thumbs-up.me-2
                                | Yes
                            button.btn.btn-danger
                                i.fa.fa-thumbs-down.me-2
                                | No

            .col-lg-3.col-xl-4.col-xxl-3
                .card.mb-5
                    .card-header.bg-primary-100.py-4
                        .d-flex.align-items-center.justify-content-between
                                div
                                    p.subtitle.text-primary Need more help?
                                    h5.mb-0 Similar Topics
                                +svgIcon('screwdriver-1', 'svg-icon svg-icon-light w-3rem h-3rem ms-3 text-primary flex-shrink-0')

                    - subtopics = ['Sint consequat aliquip?', 'Adipisicing voluptate magna quis sunt dolor velit.', 'Ad pariatur anim magna?', 'officia aliqua fugiat ex?', 'Sint consequat aliquip?', 'Adipisicing voluptate magna quis sunt dolor velit.', 'Ad pariatur anim magna?', 'officia aliqua fugiat ex?']

                    .list-group.list-group-flush.rounded-0.text-sm.my-3
                        each subtopic in subtopics
                            a.list-group-item.list-group-item-action.text-muted(href='knowledge-base-topic.html') 
                                i.far.fa-file.me-2
                                | #{subtopic}         

                - var advantages = []
                - advantages.push({name: 'Help & Documentation', icon:'destination-map-1', color: 'primary'})
                - advantages.push({name: 'Developer Resources', icon:'laptop-screen-1', color: 'pink' })
                - advantages.push({name: 'Chat With Us', icon:'chat-bubble-1', color: 'indigo'})


                each val, index in advantages
                    .card.hover-animate.text-center.mb-4
                        .card-body
                            .icon.icon-xl.mx-auto.mb-4(class="bg-" + val.color + "-light")
                                +svgIcon(val.icon, 'text-' + val.color)
                            h3.h5 #{val.name}
                            p.text-muted.text-sm.card-text #{dummyText[index].substr(0, 100)}
                            a.stretched-link(href="pages-knowledge-base.html") 
                                span.sr-only See Topic        




        .row.bg-white.py-5.mx-n3.mx-lg-n4.mx-xl-n5.px-3.px-lg-4.px-xl-5
            .col-lg-10.col-xl-8.mx-auto.text-center.py-5
                h4.subtitle.text-primary.mb-4 Get Support From Real People
                p.text-muted.mb-5 #{dummyText[3]}

                - support = [1, 2, 3, 4, 5]

                ul.list-unstyled.d-flex.flex-wrap.justify-content-center
                    each supportPerson in support
                        li
                            a(href="#")
                                img.avatar.avatar-lg.p-1.hover-animate.mx-2(src=`${path}img/avatar-${supportPerson}.jpg`, alt='')

        .row
            .col-md-8.col-lg-6.col-xxl-4.mx-auto
                .card.border-0.shadow.mt-n5.mb-5
                    .card-header.bg-primary-100.py-4.border-0
                        .d-flex.align-items-center.justify-content-between
                                div
                                    p.subtitle.text-sm.text-primary.mb-1 Drop Us a Line
                                    h4.mb-0 Contact
                                +svgIcon('ballpoint-pen-1', 'svg-icon svg-icon-light ms-3 text-primary flex-shrink-0 svg-icon-lg')

                    .card-body
                        p.text-muted.card-text #{dummyText[4]}
                    .card-footer
                        a.btn.btn-outline-primary(href='#') Let us know                                
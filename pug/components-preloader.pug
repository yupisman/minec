extends _pug-includes/layout.pug

block vars
    - var components = true;
    - var current = 'components-preloader.html';  
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Preloaders'})     

block content
    +breadcrumbs(breadcrumbs)
    +pageHeader('Preloaders') 
            
    section
        .card.mb-4
            .card-body.text-muted
                p This template comes with Spinkit included and prepared for you. Spinkit are simple loading spinners animated with CSS. 
                p SpinKit uses hardware accelerated (translate and opacity) CSS animations to create smooth and easily customizable animations.
                p.card-text Read more about this great plugin at its <a href="https://github.com/tobiasahlin/SpinKit">Repository home</a>.
                p.show-code-sample <a data-bs-toggle="collapse" href="#codeSample">Show code sample</a>

                .collapse.card-text#codeSample
                    pre.code-sample
                        code.language-js
                            +escape
                                include js/components-preloader.js

        .row
            .col-md-3.mb-4
                .card
                    .card-header.card-heading Rotating Plane
                    .card-body.d-flex.justify-content-center.pt-5.pb-5
                        .sk-rotating-plane
            .col-md-3.mb-4
                .card
                    .card-header.card-heading Double Bounce
                    .card-body.d-flex.justify-content-center.pt-5.pb-5

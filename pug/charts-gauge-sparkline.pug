                                svg.sparkline.sparkline--yellow.sparkline--filled(width='100' height='30' stroke-width='3')
                            .col.mb-3
                                svg.sparkline.sparkline--pink(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--pink.sparkline--filled(width='100' height='30' stroke-width='3')
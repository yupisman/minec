extends _pug-includes/layout.pug

block vars
    - var charts = true;
    - var current = 'charts-gauge-sparkline.html';   
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Charts - Gauges and Sparklines'})    

block content
    +breadcrumbs(breadcrumbs)
    +pageHeader('Charts - Gauges and Sparklines') 
            
    section
        .card.mb-4 
            .card-header
                h4.card-heading Gauges   
            .card-body
                p 100% native and cool looking animated JavaScript/CoffeeScript gauge. See more at <a href="http://bernii.github.io/gauge.js/">Gauge.js homepage.</a>

                p.show-code-sample <a data-bs-toggle="collapse" href="#codeSample1">Show code sample</a>

                .collapse#codeSample1
                    pre.code-sample
                        code.language-js
                            +escape.
                                const gauge1 = document.getElementById("gauge1");

                                const opts = {
                                    angle: 0, // The span of the gauge arc
                                    lineWidth: 0.06, // The line thickness
                                    radiusScale: 1, // Relative radius
                                    pointer: {
                                        length: 0.6, // // Relative to gauge radius
                                        strokeWidth: 0.035, // The thickness
                                        color: "#fff", // Fill color
                                    },
                                    fontSize: 20,
                                    limitMax: false, // If false, max value increases automatically if value > maxValue
                                    limitMin: false, // If true, the min value of the gauge will be fixed
                                    colorStart: "#6F6EA0", // Colors
                                    colorStop: "#C0C0DB", // just experiment with them
                                    strokeColor: "#eee", // to see which ones work best for you
                                    generateGradient: false,
                                    scaleOverride: true,
                                    highDpiSupport: true, // High resolution support
                                };

                                opts.colorStop = "#864DD9";
                                const gaugeObject1 = new Donut(gauge1).setOptions(opts); // create sexy gauge!

                                gaugeObject1.maxValue = 3000; // set max gauge value
                                gaugeObject1.setMinValue(0); // set min value
                                gaugeObject1.set(Math.floor(Math.random() * 3000)); // set actual value
                                gaugeObject1.setTextField(document.getElementById("gauge1Value"));                            

                .row.mt-5
                    .col-md-3
                        .gauge-container
                            canvas.gauge-canvas#gauge1
                            span#gauge1Value.gauge-label
                    .col-md-3
                        .gauge-container
                            canvas.gauge-canvas#gauge2
                            span#gauge2Value.gauge-label
                    .col-md-3
                        .gauge-container
                            canvas.gauge-canvas#gauge3
                            span#gauge3Value.gauge-label
                    .col-md-3
                        .gauge-container
                            canvas.gauge-canvas#gauge4
                            span#gauge4Value.gauge-label

        .card.mb-4
            .card-header
                h4.card-heading Sparkline

            .card-body
                p Generate SVG sparklines with JavaScript without any external dependency. See more at <a href="https://github.com/fnando/sparkline">Sparkline homepage.</a>

                p.show-code-sample <a data-bs-toggle="collapse" href="#codeSample2">Show code sample</a>

                .collapse#codeSample2
                    pre.code-sample
                        code.language-html
                            +escape
                                svg.sparkline.sparkline--red(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--red.sparkline--filled(width='100' height='30' stroke-width='3')

                                script.
                                    sparkline(document.querySelector(".sparkline"), [1, 5, 2, 4, 8, 3, 7]);
                .row.mt-5
                    .col-lg-6.col-xl-4.mb-5
                        .d-flex.align-items-center.mb-4
                            .position-relative.flex-shrink-0
                                svg.btc(width='100' height='20' stroke-width='2' stroke='blue' fill='rgba(0, 0, 255, .2)')
                                span.sparkline--tooltip(hidden)
                            .ms-3
                                p.fw-bold.mb-0 BTC Price

                        .d-flex.align-items-center
                            .position-relative.flex-shrink-0
                                svg.eth(width='100' height='20' stroke-width='2' stroke='blue' fill='rgba(0, 0, 255, .2)')
                                span.sparkline--tooltip(hidden)
                            .ms-3
                                p.fw-bold.mb-0 ETH Price                                    

                    .col-lg-6
                        .row.row-cols-2.row-cols-md-4.row-cols-lg-3
                            .col.mb-3
                                svg.sparkline.sparkline--red(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--red.sparkline--filled(width='100' height='30' stroke-width='3')
                            .col.mb-3
                                svg.sparkline.sparkline--blue(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--blue.sparkline--filled(width='100' height='30' stroke-width='3')                                
                            .col.mb-3
                                svg.sparkline.sparkline--green(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--green.sparkline--filled(width='100' height='30' stroke-width='3')
                            .col.mb-3
                                svg.sparkline.sparkline--gray(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--gray.sparkline--filled(width='100' height='30' stroke-width='3')                                
                            .col.mb-3
                                svg.sparkline.sparkline--orange(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--orange.sparkline--filled(width='100' height='30' stroke-width='3')
                            .col
                                svg.sparkline.sparkline--purple(width='100' height='30' stroke-width='3')
                                svg.sparkline.sparkline--purple.sparkline--filled(width='100' height='30' stroke-width='3')
                            .col.mb-3

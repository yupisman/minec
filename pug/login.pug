extends _pug-includes/layout-login.pug

block vars
    - var login = true;

block content
    .page-holder.align-items-center.py-4.bg-gray-100.vh-100
        .container
                
            .row.align-items-center
                   
                .col-lg-6.px-lg-4
                    .card
                        .card-header.px-lg-5
                            .card-heading.text-primary Bubbly Dashboard
                        .card-body.p-lg-5
                            h3.mb-4 Hi, welcome back! ðŸ‘‹ðŸ‘‹
                            p.text-muted.text-sm.mb-5 Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.
                        
                            form#loginForm(action="index.html")
                                .form-floating.mb-3
                                    input#floatingInput.form-control(type='email' placeholder='name@example.com')
                                    label(for='floatingInput') Email address
                                .form-floating.mb-3
                                    input#floatingPassword.form-control(type='password' placeholder='Password')
                                    label(for='floatingPassword') Password
                                .form-check.mb-3
                                    input.form-check-input(type='checkbox' name='remember', id='remember')
                                    label.form-check-label(for='remember') Remember me
                                button.btn.btn-primary.btn-lg(type='submit') Submit
                        .card-footer.px-lg-5.py-lg-4
                            .text-sm.text-muted
                                | Don't have an account? 
                                a(href='register.html') Register
                                | .

                .col-lg-6.col-xl-5.ms-xl-auto.px-lg-4.text-center.text-primary
                    img.img-fluid.mb-4(width="300", src="img/drawkit-illustration.svg", alt="", style="transform: rotate(10deg)")
                    h1.mb-4 Start saving <br class="d-none d-lg-inline">your time & money
                    p.lead.text-muted #{dummyText[0].substr(0,100)}
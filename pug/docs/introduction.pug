extends ../_pug-includes/layout

block vars
    - var path = '../'    
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: '../index.html'})
    - breadcrumbs.push({name: 'Documentation', link: 'introduction.html'})
    - breadcrumbs.push({name: 'Introduction'})
    - var heroHeading = 'Docs - Introduction'
    - var current = 'docs/introduction.html'

block content

    +breadcrumbs(breadcrumbs)
    +pageHeader(heroHeading) 

    section.mb-5 
        .row
            .col-xl-10
                .card
                    .card-header
                    .card-body
                            p Hey, welcome to the <strong>Bubbly Theme official documentation</strong>. 
